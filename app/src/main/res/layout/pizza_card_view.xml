<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="384dp"
        android:layout_height="174dp"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteY="13dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/namePizzaCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Name" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/toppingsViewPizzaCardView"
                    android:layout_alignBottom="@+id/toppingsViewPizzaCardView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Toppings:" />

                <TextView
                    android:id="@+id/pizzaCardViewSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView15"
                    android:layout_toRightOf="@+id/textView15"
                    android:paddingLeft="10dp"
                    android:text="Size" />

                <TextView
                    android:id="@+id/toppingsViewPizzaCardView"
                    android:layout_width="235dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/pizzaCardViewSize"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="50dp"
                    android:layout_toEndOf="@+id/textView4"
                    android:layout_toRightOf="@+id/textView4"
                    android:text="Text View"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/toppingsViewPizzaCardView"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/toppingsViewPizzaCardView"
                    android:layout_marginLeft="58dp"
                    android:layout_marginStart="58dp"
                    android:text="Size" />

                <TextView
                    android:id="@+id/pizzaCardViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView14"
                    android:layout_toRightOf="@+id/textView14"
                    android:paddingLeft="10dp"
                    android:text="Price" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/toppingsViewPizzaCardView"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/toppingsViewPizzaCardView"
                    android:text="Priceâ‚¬" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>