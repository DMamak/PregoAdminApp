<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.damian.pregoadminapp.updatePizza"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_update_pizza">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="Please Enter the Pizza Details"
        app:layout_constraintBottom_toTopOf="@+id/updatePizzaNameEditText"
        app:layout_constraintStart_toStartOf="@+id/updatePizzaNameEditText" />

    <TextView
        android:id="@+id/namePizzaCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="229dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:text="Name:"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/updatePizzaNameEditText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="42dp"
        android:text="Size:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namePizzaCardView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="16dp"
        android:text="Price:"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/updatePizzaPriceEditText"
        app:layout_constraintEnd_toStartOf="@+id/updatePizzaPriceEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/updatePizzaNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:hint="Please Enter Pizza Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/updatePizzaSizeToggleButton"
        app:layout_constraintStart_toStartOf="@+id/updatePizzaSizeToggleButton"
        app:layout_constraintTop_toTopOf="@+id/namePizzaCardView" />

    <ToggleButton
        android:id="@+id/updatePizzaSizeToggleButton"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="44dp"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="44dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="22dp"
        android:background="@android:drawable/btn_default"
        android:text="ToggleButton"
        android:textOff="16''"
        android:textOn="12''"
        app:layout_constraintBottom_toTopOf="@+id/updatePizzaPriceEditText"
        app:layout_constraintEnd_toEndOf="@+id/updatePizzaPriceEditText"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/namePizzaCardView" />

    <EditText
        android:id="@+id/updatePizzaPriceEditText"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="208dp"
        android:layout_marginRight="208dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="9,50"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/updatePizzaUpdateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/updatePizzaUpdateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="8dp"
        android:onClick="updateOrder"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/updatePizzaImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:onClick="updateImage"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
